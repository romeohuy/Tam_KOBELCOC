@inherits RazorFunction

@functions {
    public override string FunctionDescription
    {
        get { return "Displays the contact form."; }
    }

    [FunctionParameter(Label = "First Name Label", DefaultValue = "First Name")]
    public String FirstNameLabel { get; set; }

    [FunctionParameter(Label = "Last Name Label", DefaultValue = "Last Name")]
    public String LastNameLabel { get; set; }

    [FunctionParameter(Label = "Email Label", DefaultValue = "Email")]
    public String EmailLabel { get; set; }

    [FunctionParameter(Label = "Phone Label", DefaultValue = "Phone")]
    public String PhoneLabel { get; set; }

    [FunctionParameter(Label = "Company Label", DefaultValue = "Company")]
    public String CompanyLabel { get; set; }

    [FunctionParameter(Label = "Address Label", DefaultValue = "Address")]
    public String AddressLabel { get; set; }

    [FunctionParameter(Label = "City Label", DefaultValue = "City")]
    public String CityLabel { get; set; }

    [FunctionParameter(Label = "State Label", DefaultValue = "State/Province")]
    public String StateLabel { get; set; }

    [FunctionParameter(Label = "Zip Label", DefaultValue = "Zip/Postal")]
    public String ZipLabel { get; set; }

    [FunctionParameter(Label = "Inquiry Type Label", DefaultValue = "Inquiry Type")]
    public String InquiryTypeLabel { get; set; }

    [FunctionParameter(Label = "Inquiry Option 1", DefaultValue = "General")]
    public String InquiryOptionOne { get; set; }

    [FunctionParameter(Label = "Inquiry Option 2", DefaultValue = "Parts")]
    public String InquiryOptionTwo { get; set; }

    [FunctionParameter(Label = "Inquiry Option 3", DefaultValue = "Service")]
    public String InquiryOptionThree { get; set; }

    [FunctionParameter(Label = "Product Label", DefaultValue = "Product")]
    public String ProductLabel { get; set; }

    [FunctionParameter(Label = "Serial Number Label", DefaultValue = "Serial Number")]
    public String SerialNumberLabel { get; set; }

    [FunctionParameter(Label = "Message Label", DefaultValue = "Message")]
    public String MessageLabel { get; set; }

    [FunctionParameter(Label = "Submit Label", DefaultValue = "Submit")]
    public String SubmitLabel { get; set; }

}

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:f="http://www.composite.net/ns/function/1.0">
<head>
</head>
<body>
    <form id="contactForm">
        <div class="col-md-4 form-group">
            <input type="text" class="form-control" tabindex="1" name="fname" id="fname" required="required" placeholder="@FirstNameLabel*" />
        </div>
        <div class="col-md-4 form-group">
            <input type="text" class="form-control" tabindex="2" name="lname" id="lname" required="required" placeholder="@LastNameLabel*" />
        </div>
        <div class="col-md-4 form-group">
            <input type="email" class="form-control" tabindex="3" name="email" id="email" required="required" placeholder="@EmailLabel*" />
        </div>
        <div class="col-md-4 form-group">
            <input type="tel" class="form-control" tabindex="4" name="phone" id="phone" required="required" placeholder="@PhoneLabel*" />
        </div>
        <div class="clearfix"></div>
        <div class="col-md-6 form-group">
            <input type="text" class="form-control" tabindex="5" name="company" id="company" required="required" placeholder="@CompanyLabel*" />
        </div>
        <div class="col-md-6 form-group">
            <input type="text" class="form-control" tabindex="6" name="address" id="address" required="required" placeholder="@AddressLabel*" />
        </div>
        <div class="col-md-4 form-group">
            <input type="text" class="form-control" tabindex="7" name="city" id="city" required="required" placeholder="@CityLabel*" />
        </div>
        <div class="col-md-4 form-group">
            <select class="form-control" name="state" id="state" required="required">
                <option value="">@StateLabel*</option>
                <option value="AL">Alabama</option>
                <option value="AK">Alaska</option>
                <option value="AZ">Arizona</option>
                <option value="AR">Arkansas</option>
                <option value="CA">California</option>
                <option value="CO">Colorado</option>
                <option value="CT">Connecticut</option>
                <option value="DE">Delaware</option>
                <option value="DC">District Of Columbia</option>
                <option value="FL">Florida</option>
                <option value="GA">Georgia</option>
                <option value="HI">Hawaii</option>
                <option value="ID">Idaho</option>
                <option value="IL">Illinois</option>
                <option value="IN">Indiana</option>
                <option value="IA">Iowa</option>
                <option value="KS">Kansas</option>
                <option value="KY">Kentucky</option>
                <option value="LA">Louisiana</option>
                <option value="ME">Maine</option>
                <option value="MD">Maryland</option>
                <option value="MA">Massachusetts</option>
                <option value="MI">Michigan</option>
                <option value="MN">Minnesota</option>
                <option value="MS">Mississippi</option>
                <option value="MO">Missouri</option>
                <option value="MT">Montana</option>
                <option value="NE">Nebraska</option>
                <option value="NV">Nevada</option>
                <option value="NH">New Hampshire</option>
                <option value="NJ">New Jersey</option>
                <option value="NM">New Mexico</option>
                <option value="NY">New York</option>
                <option value="NC">North Carolina</option>
                <option value="ND">North Dakota</option>
                <option value="OH">Ohio</option>
                <option value="OK">Oklahoma</option>
                <option value="OR">Oregon</option>
                <option value="PA">Pennsylvania</option>
                <option value="PR">Puerto Rico</option>
                <option value="RI">Rhode Island</option>
                <option value="SC">South Carolina</option>
                <option value="SD">South Dakota</option>
                <option value="TN">Tennessee</option>
                <option value="TX">Texas</option>
                <option value="UT">Utah</option>
                <option value="VT">Vermont</option>
                <option value="VA">Virginia</option>
                <option value="WA">Washington</option>
                <option value="WV">West Virginia</option>
                <option value="WI">Wisconsin</option>
                <option value="WY">Wyoming</option>
                <option value="AB">Alberta</option>
                <option value="BC">British Columbia</option>
                <option value="MB">Manitoba</option>
                <option value="NB">New Brunswick</option>
                <option value="NL">Newfoundland and Labrador</option>
                <option value="NT">Northwest Territories</option>
                <option value="NS">Nova Scotia</option>
                <option value="NU">Nunavut</option>
                <option value="ON">Ontario</option>
                <option value="PE">Prince Edward Island</option>
                <option value="QC">Quebec</option>
                <option value="SK">Saskatchewan</option>
                <option value="YT">Yukon</option>
            </select>
        </div>
        <div class="col-md-4 form-group">
            <input type="text" class="form-control" tabindex="8" name="zip" id="zip" required="required" placeholder="@ZipLabel*" />
        </div>
        <div class="col-md-3 form-group">
            <p style="margin:0;">@InquiryTypeLabel*:</p>
        </div>
        <div class="col-md-9 form-group">
            <label class="radio-inline">
                <input tabindex="9" type="radio" name="inquiry" value="General" required="required" /> @InquiryOptionOne
            </label>
            <label class="radio-inline">
                <input type="radio" name="inquiry" value="Parts" /> @InquiryOptionTwo
            </label>
            <label class="radio-inline">
                <input type="radio" name="inquiry" value="Service" /> @InquiryOptionThree
            </label>
        </div>
        <div class="col-md-6 form-group">
            <input type="text" class="form-control" name="product" id="product" placeholder="@ProductLabel" />
        </div>
        <div class="col-md-6 form-group">
            <input type="text" class="form-control" name="serialnumber" id="serialnumber" placeholder="@SerialNumberLabel" />
        </div>
        <div class="col-md-12 form-group">
            <textarea rows="7" class="form-control" name="comments" id="comments" required="required" placeholder="@MessageLabel*"></textarea>
        </div>
        <div class="col-md-12 form-group recaptcha-form-group">
            @{var recaptchaSiteKey = System.Configuration.ConfigurationManager.AppSettings["recaptchaSiteKey"];}
            <div class="g-recaptcha" data-sitekey="@recaptchaSiteKey"></div>
            <div class="alert alert-danger" role="alert">The reCAPTCHA must be checked to submit this form.</div>
        </div>
        <div class="col-md-12 form-group">
            <button type="submit" name="submit" id="submit" class="btn btn-default ladda-button" data-style="zoom-in" data-spinner-color="#ffffff"><span class="ladda-label">@SubmitLabel</span><span class="ladda-spinner"></span></button>
        </div>
    </form>
</body>
</html>